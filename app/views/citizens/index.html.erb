<p id="notice"><%= notice %></p>

<h1>Listing Citizens</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Clmp number</th>
      <th>Email</th>
      <th>Phone 1</th>
      <th>Phone 2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @citizens.each do |citizen| %>
      <tr>
        <td><%= citizen.first_name %></td>
        <td><%= citizen.last_name %></td>
        <td><%= citizen.clmp_number %></td>
        <td><%= citizen.email %></td>
        <td><%= citizen.phone_1 %></td>
        <td><%= citizen.phone_2 %></td>
        <td><%= link_to 'Show', citizen %></td>
        <td><%= link_to 'Edit', edit_citizen_path(citizen) %></td>
        <td><%= link_to 'Destroy', citizen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


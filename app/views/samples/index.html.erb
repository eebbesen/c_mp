<p id="notice"><%= notice %></p>

<h1>Listing Samples for <%= Lake.find(@lake.id).lake_name %></h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Notes</th>
      <th>Physical appearance</th>
      <th>Recreational suitability</th>
      <th>Water color</th>
      <th>Secchi depth</th>
      <th>Is bottom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @samples.each do |sample| %>
      <tr>
        <td><%= link_to sample.date.strftime("%m/%d/%Y") + ' ' + sample.time.strftime("%H:%M"), edit_sample_path(sample) %></td>
        <td><%= sample.notes %></td>
        <td><%= sample.physical_appearance %></td>
        <td><%= sample.recreational_suitability %></td>
        <td><%= sample.water_color %></td>
        <td><%= sample.secchi_depth %></td>
        <td><%= sample.is_bottom %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sample', new_sample_path(lake_id: @lake.id) %>

<p id="notice"><%= notice %></p>

<h1>Listing Samples</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Secchi depth</th>
      <th>Is bottom</th>
      <th>Physical appearance</th>
      <th>Recreational suitability</th>
      <th>Water color</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @samples.each do |sample| %>
      <tr>
        <td><%= sample.date %></td>
        <td><%= sample.time %></td>
        <td><%= sample.secchi_depth %></td>
        <td><%= sample.is_bottom %></td>
        <td><%= sample.physical_appearance %></td>
        <td><%= sample.recreational_suitability %></td>
        <td><%= sample.water_color %></td>
        <td><%= sample.notes %></td>
        <td><%= link_to 'Show', sample %></td>
        <td><%= link_to 'Edit', edit_sample_path(sample) %></td>
        <td><%= link_to 'Destroy', sample, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

